@model IEnumerable<Sklep_Internetowy_MirrorStore.Models.Mirror>

@{
    ViewData["Title"] = "Mirror Store";
}

<h1>Mirror Store</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-md-8 offset-md-2"></div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MirrorPicture )
                    </th>
            
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
           
            
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-3" src="css/images/images1.jpg" alt="@item.Name" style="max-width: 150px">
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
            
            
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-controller="Mirror" asp-action="Edit" asp-route-id="@item.Id" ><i class="bi bi-pencil-square"> Edit </i></a>
                        <a class="btn btn-outline-primary" asp-controller="Mirror" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"> Details </i></a>
                        <a class="btn btn-outline-primary" asp-controller="Mirror" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"> Delete </i></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>